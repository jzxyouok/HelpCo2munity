<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="layout.MessageFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/id_find_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/find_top_select_text"
        app:tabIndicatorColor="@color/find_top_select_text"
        app:tabTextColor="#605f5f"
        app:tabGravity="fill"
        android:fillViewport="false">

    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/id_find_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

    </android.support.v4.view.ViewPager>

</LinearLayout>
