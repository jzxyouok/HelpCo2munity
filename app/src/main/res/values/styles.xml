<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- 主页侧滑菜单样式设置 -->
    <style name="Main_Style" parent="MaterialDrawerTheme.TranslucentStatus">
        <!-- ...and here we setting appcompat’s color theme attrs -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/material_drawer_dark_background</item>
        <item name="material_drawer_primary_text">@color/md_dark_secondary</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_dark_secondary_text
        </item>
        <item name="material_drawer_hint_text">@color/material_drawer_dark_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_dark_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_dark_selected</item>
        <item name="material_drawer_selected_text">@color/material_drawer_dark_hint_text</item>
        <item name="material_drawer_header_selection_text">
            @color/material_drawer_dark_primary_text
        </item>
        <!-- CAB :D -->
        <item name="windowActionModeOverlay">true</item>

        <item name="actionSheetStyle">@style/ActionSheetStyleiOS7</item>

    </style>


    <!-- 欢迎界面主题 -->
    <style name="ActivityWellComeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/wellCome_background</item>
        <item name="colorPrimaryDark">@color/wellCome_background</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Login_Register_AppThem" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/login_register_colorPrimary</item>
        <item name="colorPrimaryDark">@color/login_register_colorPrimaryDark</item>
        <item name="colorAccent">@color/login_register_colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 底部导航菜单按钮通用样式属性 -->
    <style name="RadioButton_setting">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@drawable/foot_text_color_select</item>
    </style>


    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionSheetStyle">@style/ActionSheetStyleiOS7</item>
    </style>

    <style name="Theme.DesignDemo" parent="Base.Theme.DesignDemo"></style>

</resources>
